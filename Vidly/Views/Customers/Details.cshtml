@model Vidly.Models.Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Tipo de Membro: @Model.MembershipType.Name</li>
    @if (Model.Birthdate.HasValue)
    {
        <li>Data de Nascimento: @Model.Birthdate.Value.ToShortDateString()</li>
    }
</ul>